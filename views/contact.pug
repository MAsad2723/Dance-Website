extends base.pug

block scripts 
    script(src='/static/index.js')

block style 
    style
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", name="name", class="myInput", placeholder="Enter your Name: " required) 
            input(type="phone", name="phone", class="myInput", placeholder="Enter your Phone Number: " required) 
            input(type="email", name="email", class="myInput", placeholder="Enter your Email ID: " required) 
            input(type="text", name="address", class="myInput", placeholder="Enter your Address: " required) 
            input(type="text", name="desc", class="myInput", placeholder="Enter your concern: " required) 
            button(type="submit", class="btn")
                | Submit Here! 